body
  color rgb(51,51,51)
  font 24px/1.5 'Merriweather', serif
  font-style normal
  font-weight 300
  font-smoothing subpixel-antialiased
  text-size-adjust none
  @media (max-width: 1023px)
    font-size 21px
  @media (max-width: 768px)
    font-size 18px
  @media (max-width: 568px)
    font-size 16px

h1
h2
h3
h4
h5
h6
  font-style normal
  font-weight 400
  line-height 1
  margin 36px 0 12px 0
  @media (max-width: 1023px)
    margin 32px 0 11px 0
  @media (max-width: 768px)
    margin 27px 0 9px 0
  @media (max-width: 568px)
    margin 24px 0 8px 0

.masthead
  .container
    h1
      font-size 36px
      font-weight 700
      @media (max-width: 1023px)
        font-size 24px
      @media (max-width: 768px)
        font-size 21px
      @media (max-width: 568px)
        font-size 18px
      a
        font-weight 700
.page-index
  .masthead
    .container
      h1
        font-size 96px
        @media (max-width: 1023px)
          font-size 72px
        @media (max-width: 768px)
          font-size 60px
        @media (max-width: 568px)
          font-size 48px

h1.lg
  font-size 72px
  font-weight 700
  @media (max-width: 1023px)
    font-size 60px
  @media (max-width: 768px)
    font-size 48px
  @media (max-width: 568px)
    font-size 36px
  a
    font-weight 700

h1
  font-size 60px
  font-weight 700
  @media (max-width: 1023px)
    font-size 48px
  @media (max-width: 768px)
    font-size 36px
  @media (max-width: 568px)
    font-size 24px

h1.sm
h2
  font-size 48px
  @media (max-width: 1023px)
    font-size 36px
  @media (max-width: 768px)
    font-size 24px
  @media (max-width: 568px)
    font-size 21px
h2.date
  color rgb(128,128,128)

h1.xs
h2.sm
h3
  font-size 36px
  @media (max-width: 1023px)
    font-size 24px
  @media (max-width: 768px)
    font-size 21px
  @media (max-width: 568px)
    font-size 18px

h2.xs
h3.sm
h4
h5
h6
  font-size 24px
  @media (max-width: 1023px)
    font-size 21px
  @media (max-width: 768px)
    font-size 18px
  @media (max-width: 568px)
    font-size 16px

p
  margin 36px 0
  @media (max-width: 1023px)
    margin 32px 0
  @media (max-width: 768px)
    margin 27px 0
  @media (max-width: 568px)
    margin 24px 0

strong
  font-weight 700

small
figcaption
code
  font-size 21px
  @media (max-width: 1023px)
    font-size 18px
  @media (max-width: 768px)
    font-size 16px
  @media (max-width: 568px)
    font-size 14px

cite
  margin 0

blockquote
  font-size 36px
  font-weight 400
  font-style italic
  text-align center
  box-sizing border-box
  p:first-child
    margin-top 0
  p:last-child
    margin-bottom 0
  @media (max-width: 1023px)
    font-size 24px
  @media (max-width: 768px)
    font-size 21px
  @media (max-width: 568px)
    font-size 18px

pre
  font-family 'Lekton', sans-serif
  font-style normal
  font-weight 400

a
  color rgb(51,51,51)
  font-weight 400
  text-decoration none
  transition-property color
  transition-duration 0.25s
  animation-timing-function linear
  &:hover
    color rgb(0,0,0)
  *
    font-weight 300
  strong
    font-weight 700
  h1
    font-weight 700
  h2, h3, h4, h5, h6
    font-weight 400

ul
ol
dl
  padding 0
  margin 36px 0 36px 36px
  @media (max-width: 1023px)
    margin 32px 0 32px 32px
  @media (max-width: 768px)
    margin 27px 0 27px 27px
  @media (max-width: 568px)
    margin 24px 0 24px 24px

ul
  list-style-type disc
  ul
    list-style-type circle
    ul
      list-style-type square

ol
  list-style-type decimal
  ol
    list-style-type lower-alpha
    ol
      list-style-type lower-roman

hr
  display block
  height 0
  margin 36px 0
  padding 0
  border 0
  border-top 1px solid rgb(229,229,229)
  @media (max-width: 1023px)
    margin 32px 0
  @media (max-width: 768px)
    margin 27px 0
  @media (max-width: 568px)
    margin 24px 0

/* adjust margins */
p:first-child
h1:first-child
h2:first-child
h3:first-child
h4:first-child
h5:first-child
h6:first-child
ul:first-child
ol:first-child
dl:first-child
  margin-top 0

p:last-child
h1:last-child
h2:last-child
h3:last-child
h4:last-child
h5:last-child
h6:last-child
ul:last-child
ol:last-child
dl:last-child
  margin-bottom 0

p:only-child
  margin 36px 0
  @media (max-width: 1023px)
    margin 32px 0
  @media (max-width: 768px)
    margin 27px 0
  @media (max-width: 568px)
    margin 24px 0

h1 + p
h2 + p
h3 + p
h4 + p
h5 + p
h6 + p
hgroup + p
hgroup + p
hgroup + p
hgroup + p
hgroup + p
hgroup + p
  margin-top 0

li > ul
li > ol
li > dl
  margin-bottom 0

.center
  text-align center